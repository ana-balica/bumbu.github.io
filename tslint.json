{
  "extends": "tslint:recommended",
  "rules": {
    "semicolon": [false, "always"],
    "quotemark": [true, "single", "jsx-double"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "only-arrow-functions": false,
    "prefer-const": true
  }
}
