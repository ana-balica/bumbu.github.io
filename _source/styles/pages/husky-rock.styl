.main.main--husky-rock
  .post__header
    display: none;

.huskyRock
  &__card
    width: 50%;
    height: 130px;
    border: 1px solid #ccc;
    float: left;
    box-sizing: border-box;

  &__cardImage
    height: 100px;
    width: 100%;

    img
      display: block;
      max-width: 100%;
      max-height: 100%;
      margin: 0 auto;

  &__cardTitle
    text-align: center;

  &__map
    // width: 100%;
    // min-height: 400px;
    border: 1px solid #ccc;
    box-sizing: border-box;
    position: relative;

    img
      margin: 0;
      display: block;

  &__mapOverlayRocks
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

  &__mapSequenceStep
    position: absolute;
    background: red;
    opacity: 50%;

  &__mapOverlayLines
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
