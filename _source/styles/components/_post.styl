.post
  max-width $postMaxWidth
  margin 0 auto

  &__title
    font-family: $headingsFontFamily;
    font-weight: $headingsFontWeight;
    font-size: $fontSizeH1;
    line-height: 1.2;
    padding: 0;
    margin-top: 15px;
    margin-bottom: 25px;
    border: 0;

    a
      text-decoration none
      color $colorText

  // &__header,
  // &__content,
  // &__footer
  //   max-width 620px

  &__footer
    // text-align right

  &__date
    font-style italic
    text-align right
    display block

  &__related
    border-top 1px solid $colorSidebar
    margin-top 20px
    padding-top 20px

  &__excerpt
    a
      color $colorText

      &:hover,
      &:focus
        text-decoration none
        color $colorLink

    &:after
      content ''
      display table
      clear both

  &__excerpt-link
    border 1px solid $colorSidebar
    border-radius 2px
    display inline-block
    margin 0
    padding 4px 10px

    &:hover,
    &:focus
      border 1px solid $colorText

  code
    color $colorCodeSnippet
    border 1px solid #e1e1e8
    background #f7f7f9
    border-radius 3px
    font-family $codeFontFamily
    font-size $codeFontSize
    padding 0px 3px 1px

  pre
    font-family $codeFontFamily
    font-size $codeFontSize
    clear both

    code
      backround #f5f2f0
      padding: 0.5em 0
      display block;
      border 0
      border-radius 0

    code[class*='language-']
      color #000
      border 0
      background none
      border-radius 0
      padding 0

  .prettyprint
    font-size: $codeFontSize
    font-family $codeFontFamily
    margin 6px 0 12px
    padding 0 6px 2px
    overflow auto
    background #f5f2f0

    &.linenums
      padding 0

    ol
      padding-left: 6px

    code
      font-size: $codeFontSize
      border 0
      background none
      padding 0

  p + .prettyprint
    margin-top: -9px;

  .prettyprint + p
    margin-top: 24px;

  img
    max-width 100%
    height auto
    margin 16px 0 12px

    &.alignleft,
    &.alignright
      margin 0

    &.alignleft
      float left

    &.alignright
      float right

  .grid-tile
    width 25%
    display inline-block

    +bp(m)
      width 33%

    img
      max-width 100%

  .grid-tile-large
    width 50%
    display inline-block

    img
      max-width 100%
