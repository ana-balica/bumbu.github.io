.listing
  position absolute
  trbl 0 0 0 $widthIconsSidebar + 1
  overflow auto
  background $colorSidebarBg
  border-right 1px solid $colorSidebar

  &__header
    border-bottom: 1px solid $colorSidebar
    color $colorText
    font-size $fontSizeListing
    line-height 1.3
    margin 0 14px
    padding 0
    text-decoration none

    h1
      margin: 0;
      padding: 0 10px 0 0;
      height: $widthIconsSidebar;
      line-height: $widthIconsSidebar;
      font-weight: normal;
      font-size $fontSizeSidebar
      text-decoration: none;

  &__form
    margin 0
    padding 0
    border 0
    height $widthIconsSidebar

  &__form-input
    font-size $baseFontSize * 1.2
    background none
    outline none
    border 0
    padding 14px 0 9px
    display block
    width 100%

  &__form-button
    display none

  &__items
    //

  &__item
    display block
    padding: 9px 14px
    margin-top 5px
    cursor: pointer;
    font-size $fontSizeListing
    line-height 1.3
    text-decoration: none;

    &,
    &:visited
      color $colorSidebar

    &--active,
    &--active:visited,
    &--active:hover
      cursor: default;
      background none
      font-weight bold
      color $colorText

    &:hover,
    &:focus
      background: darken($colorSidebarBg, 4)
      color: $colorText
      text-decoration none

    &--alert
      font-size $baseFontSize
      background $colorBg
      margin 14px 14px
      border 1px solid $colorSidebar
      color $colorText

      &:hover
        background $colorBg
        cursor default
